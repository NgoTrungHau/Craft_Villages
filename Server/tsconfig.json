{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "@controller/*": ["controller/*"],
      "@models/*": ["models/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middleware/*": ["middleware/*"],
      "@router/*": ["router/*"],
      "@provider/*": ["provider/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"]
}
